generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./local.db"
}

// prisma/schema.prisma

model Client {
  // PK
  id Int @id @default(autoincrement())

  // Fields
  cpf       String?  @unique
  cnpj      String?  @unique
  name      String
  phone     String  @unique
  email     String? @unique
  fee       Float
  feeDueDay Int

  // Relations
  billings Billing[]

  @@map("Clientes")
}

model Billing {
  id      Int       @id @default(autoincrement())
  fee     Float
  status  String    @default("Pending")
  dueDate String
  paidAt  String?

  // Unique year-month
  yearMonth String

  // FK (DocumentoCliente)
  clientId Int?
  client   Client? @relation(fields: [clientId], references: [id], onDelete: SetNull)

  // Relation: Billing → ServiceBilling
  serviceBillings ServiceBilling[]

  @@unique([clientId, yearMonth])
  @@map("Cobrancas")
}

model Service {
  id    Int    @id @default(autoincrement())
  name  String @unique
  value Float

  // Relation: Service -> ServicesBilling
  serviceBillings ServiceBilling[]

  @@map("Servicos")
}

model ServiceBilling {
  id Int @id @default(autoincrement())

  name            String
  value           Float
  quantity        Int

  // FK -> Service
  serviceOriginId Int?
  service Service? @relation(fields: [serviceOriginId], references: [id], onDelete: SetNull)
  

  // FK → Billing
  billingId Int?
  billing   Billing? @relation(fields: [billingId], references: [id], onDelete: Cascade)

  @@unique([billingId, serviceOriginId])
  @@map("ServicosCobranca")
}
